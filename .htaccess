
# BEGIN FlexCore
<IfModule mod_rewrite.c>

    RewriteEngine On
    RewriteBase /
    Options -Indexes

    # Rewrite Conditions #
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d


    # Rewrite Rules for Views Templates #
    DirectoryIndex                      Views/index.php
    RewriteRule ^([iI]ndex|[hH]ome)$    Views/index.php [L]


    # Assets Folder #
    RewriteRule ^assets\/(.+)$ Views/assets/$1 [L]


</IfModule>
# END FlexCore

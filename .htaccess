
# BEGIN FlexCore
<IfModule mod_rewrite.c>

    RewriteEngine On
    RewriteBase /
    Options -Indexes

    # Rewrite Conditions #
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d


    # Rewrite Rules for Views Templates #
    DirectoryIndex    Views/index.php
    RewriteRule .     App.php


    # Assets Folder #
    RewriteRule ^assets\/(.+)$ Views/assets/$1 [L]

    # Prevent Access to app.json
    RewriteRule ^/?Config/app\.json$ - [F,L]


</IfModule>
# END FlexCore
